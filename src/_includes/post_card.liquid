<article class="rounded-md shadow hover:shadow-lg bg-theme-100 h-full
	 grid grid-rows-[200px_auto]
	 md:grid-flow-col
	 md:grid-rows-none md:grid-cols-[300px_auto]
	 lg:grid-flow-row
	 lg:grid-cols-none lg:grid-rows-[400px_auto]">
	<div class="p-4 grid grid-rows-[2fr_1fr_2fr] items-center">
		<h3 class="font-bold md:text-lg">{{-post.title-}}</h3>
		<div class="text-slate-600 space-x-1 text-sm">
			<time datetime="{{-post.date | default: ''-}}">{{-post.date | default: ''-}}</time><span aria-hidden="true">&bull;</span><span>{{-post.publisher | default: 'Media'-}}</span>
		</div>
		<p class="line-clamp-3 self-start">{{post.description|default: 'Read more&hellip;'}}</p>
	</div>
	<img src="{{-post.img.uri | url-}}" alt="{{-post.img.alt-}}" loading="lazy"
	     class="w-full h-full object-cover object-top order-first aspect-video bg-slate-200
		    rounded-t-md
		    md:rounded-none md:rounded-l-md
		    lg:rounded-none lg:rounded-t-md
		   ">
</article>
