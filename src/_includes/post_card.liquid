<article class="rounded-md shadow hover:shadow-lg bg-theme-light/25 h-full">
	<img src="{{-post.img.uri | url-}}" alt="{{-post.img.alt-}}"
	    class="w-full rounded-t-md aspect-video bg-slate-200
	    object-cover object-top">
	<div class="p-4 space-y-2">
		<h3 class="font-bold">{{-post.title-}}</h3>
		<div class="text-slate-600 md:space-x-1 text-sm">
			<time datetime="{{-post.date | default: ''-}}">
				{{-post.date | default: ''-}}
			</time>
			<span>&bull;</span>
			<span>{{-post.publisher | default: 'Media'-}}</span>
		</div>
		<p class="my-auto line-clamp-3 lg:line-clamp-none">{{post.description|default: 'Read more&hellip;'}}</p>
	</div>
</article>
